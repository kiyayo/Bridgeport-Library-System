<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Bridgeport Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-expand-sm bg-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link"@Html.ActionLink("Home", "Index", "Home")</a>
                <a class="nav-link"@Html.ActionLink("About", "About", "Home")</a>
                <a class="nav-link"@Html.ActionLink("Contact", "Contact", "Home")</a>
                <a class="nav-link"@Html.ActionLink("Books", "Index", "Books")</a>
                <a class="nav-link"@Html.ActionLink("Members", "Index", "Members")</a>
                <a class="nav-link" @Html.ActionLink("Roles","Index","Roles")</a>
                </li>
                </ul>
                </nav>
                @Html.Partial("_LoginPartial")
                
                
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year Bridgeport Library</p>
                    </footer>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
</body>
</html>
